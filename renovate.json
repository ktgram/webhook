{
  "extends": [
    "config:base",
    ":automergeMinor"
  ],
  "baseBranches": [
    "master"
  ],
  "automergeType": "branch",
  "packageRules": [
    {
      "matchPackagePatterns": [
        "*"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch"
    }
  ]
}
